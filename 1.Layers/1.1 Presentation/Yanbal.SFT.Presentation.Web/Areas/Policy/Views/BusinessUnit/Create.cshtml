@using Yanbal.SFT.Presentation.Web.Source.Resources.Shared
@using Yanbal.SFT.Presentation.Web.Source.Resources.Policy.BusinessUnit
@using Yanbal.SFT.Presentation.Web.Source.Models.Policy;
@using Yanbal.SFT.FreightManagement.Common.Messages;
@model BusinessUnitModel

<div class="w-formulario-popup">
    <div class="w-title-2">
        @Html.Raw(IndexResource.LabelTitleNew)
    </div>
    <div id="divRequiredField">
        <span class="fa fa-info-circle"></span>
        <span>@GeneralResource.LabelRequiredField1<span class="danger">*</span>@GeneralResource.LabelRequiredField2</span>
    </div>
    <hr />
    <div class="w-form">
        <div id="divContainerNew" class="w-item">
            <form id="frmCreateBusinessUnit">
                <div id="divCreateBusinessUnit">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelCountry)<span class="danger">*</span>:</label>
                                    <div class="col-sm-8">
                                        <select id="slcCountryCreate" class="form-control" validable="required CountryReq" data-bind="options: ListCountry, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CountryCode', optionsCaption: '@Html.Raw(GeneralResource.LabelSelect)'">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelBusinessUnitName)<span class="danger">*</span>:</label>
                                    <div class="col-sm-8">
                                        <input id="txtBusinessUnitNameCreate" maxlength="255" type="text"  validable="required BusinessUnitNameReq" class="form-control" placeholder="@Html.Raw(IndexResource.LabelBusinessUnitName)" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelAddress)<span class="danger">*</span>:</label>
                                    <div class="col-sm-8">
                                        <input id="txtAddressCreate" maxlength="255" type="text" validable="required AddressReq" class="form-control" placeholder="@Html.Raw(IndexResource.LabelAddress)" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">@Html.Raw(GeneralResource.LabelRegistrationStatus):</label>
                                    <div class="col-sm-8">
                                        <label class="col-sm-5 control-label-bold">@Html.Raw(Model.LabelRegistrationStatus)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="cnt-button">
        <input id="btnSaveCreate" class="btn btn-primary" type="button" data-bind="visible: Save.Visible, enable: Save.Enabled" value="@GeneralResource.LabelSave"/>
        <input id="btnCancelCreate" class="btn btn-default" type="button" data-bind="visible: Cancel.Visible, enable: Cancel.Enabled" value="@GeneralResource.LabelGetOut" />
    </div>
</div>

<script type="text/javascript">
    ns('Yanbal.SFT.Presentation.Web.Policy.BusinessUnit.Models');
    Yanbal.SFT.Presentation.Web.Policy.BusinessUnit.Models.Create = @(Html.Raw(Json.Encode(Model)))
</script>

@using Yanbal.SFT.Presentation.Web.Source.Resources.Shared
@using Yanbal.SFT.Presentation.Web.Source.Resources.Policy.UbigeoZoneType
@using Yanbal.SFT.Presentation.Web.Source.Models.Policy;
@using Yanbal.SFT.FreightManagement.Common.Messages;
@model UbigeoZoneTypeModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@Html.Raw(IndexResource.LabelTitleUbigeoZoneType)</strong>
    </div>
    <div class="panel-body">
        <div id="divUbigeoZoneType">
            <form id="frmUbigeoZoneTypeIndex" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-5 control-label">@Html.Raw(Model.LabelGeoLevel1):</label>
                                <div class="col-sm-7">
                                    <select id="slcGeoLevel1" name="CodeLevel1" class="form-control" data-bind="options: ListZoneLevel1, optionsText: 'Name', optionsValue: 'Id', optionsCaption: '@Html.Raw(GeneralResource.LabelSelectAll)'">
                                    </select>
                                    <input id="hdnGeoLevel1" name="Level1" type="hidden" />
                                </div>
                            </div>
                        </div>
                        <div class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-5 control-label">@Html.Raw(Model.LabelGeoLevel2):</label>
                                <div class="col-sm-7">
                                    <select id="slcGeoLevel2" name="CodeLevel2" class="form-control">
                                    </select>
                                    <input id="hdnGeoLevel2" name="Level2" type="hidden" />
                                </div>
                            </div>
                        </div>
                        <div class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-5 control-label">@Html.Raw(Model.LabelGeoLevel3):</label>
                                <div class="col-sm-7">
                                    <select id="slcGeoLevel3" name="CodeLevel3" class="form-control">
                                    </select>
                                    <input id="hdnGeoLevel3" name="Level3" type="hidden" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelZoneType):</label>
                                <div class="col-sm-7">
                                    <select id="slcZoneType" name="CodeTypeZone" class="form-control" data-bind="options: ListTypeZone, optionsText: 'Name', optionsValue: 'Id', optionsCaption: '@Html.Raw(GeneralResource.LabelSelectAll)'">
                                    </select>
                                    <input id="hdnZoneType" name="TypeZoneDescription" type="hidden" />
                                </div>
                            </div>
                        </div>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-5 control-label">@Html.Raw(GeneralResource.LabelRegistrationStatus):</label>
                                <div class="col-sm-7">
                                    <select id="slcSearchRegistrationStatus" name="RegistrationStatus"  class="form-control" data-bind="options: ListRegistrationStatus, optionsText: 'Name', optionsValue: 'Id'">
                                    </select>
                                    <input id="hdnRegistrationStatus" name="DescriptionRegistrationStatus" type="hidden" />
                                </div>
                            </div>
                        </div>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-12" align="right">                                    
                                    <input id="btnVisualize" type="button" class="btn btn-default btn-filter" value="@GeneralResource.LabelVisualize" data-bind="visible: Visualize.Visible, enable: Visualize.Enabled" />
                                    <input id="btnSearch" type="button" class="btn btn-primary" value='@Html.Raw(GeneralResource.LabelShow)' data-bind="visible: Search.Visible, enable: Search.Enabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="divSearchResult" style="display: none" onscroll="true">
                    <div class="table-responsive u-table-search">
                        <div id="grdResult" name="gridResult" class="table table-bordered table-striped table-hover table-responsive">
                        </div>
                    </div>
                </div>
                <br />
                <div>
                    <input id="btnCreate" type="button" class="pull-left btn btn-default btn-filter" value='@Html.Raw(GeneralResource.LabelAdd)' data-bind="visible: Create.Visible, enable: Create.Enabled"/>
                </div>
            </form>
        </div>
    </div>
</div>


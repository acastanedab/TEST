        Yanbal.SFT.Presentation.Web.UbigeoZoneTypeValidation.Message.Resources.ModificationReasonReq = '@Html.Raw(GeneralResource.LabelModificationReason)';
    </script>

    <script type="text/javascript" src="~/Scripts/Views/Policy/UbigeoZoneType/Index/Controller.js"></script>
    <script type="text/javascript" src="~/Scripts/Views/Policy/UbigeoZoneType/Index/Index.js"></script>
    <script type="text/javascript" src="~/Scripts/Views/Policy/UbigeoZoneType/Create/Controller.js"></script>
    <script type="text/javascript" src="~/Scripts/Views/Policy/UbigeoZoneType/Edit/Controller.js"></script>

    <script type="text/javascript">
        ns('Yanbal.SFT.Presentation.Web.Policy.UbigeoZoneType.Models');
        Yanbal.SFT.Presentation.Web.Policy.UbigeoZoneType.Models.Index = @(Html.Raw(Json.Encode(Model)));

        Yanbal.SFT.Presentation.Web.Policy.UbigeoZoneType.Resources.LabelGridCountry            = '@Html.Raw(IndexResource.LabelGridCountry)';
        Yanbal.SFT.Presentation.Web.Policy.UbigeoZoneType.Resources.LabelGridLevel1             = '@Html.Raw(Model.LabelGeoLevel1)';

@using Yanbal.SFT.Presentation.Web.Source.Resources.Shared
@using Yanbal.SFT.Presentation.Web.Source.Resources.Policy.Culture
@using Yanbal.SFT.Presentation.Web.Source.Models.Policy;
@using Yanbal.SFT.FreightManagement.Common;
@model CultureModel

@{
    string valueSymbol1= "";
    string valueSymbol2= "";
}

<div class="w-formulario-popup">
    <div class="w-title-2">
        @Html.Raw(IndexResource.LabelTitleEdit)
    </div>
    <div id="divRequiredField">
        <span class="fa fa-info-circle"></span>
        <span>@GeneralResource.LabelRequiredField1<span class="danger">*</span>@GeneralResource.LabelRequiredField2</span>
    </div>
    <hr />
    <div class="w-form">
        <div id="divContainerEdit" class="w-item">
            <form id="frmEditCulture">
                <div id="divEditCulture">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelCultureCode)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <input id="txtCultureCodeEdit" class="form-control" disabled="disabled" maxlength="4" type="text" style="text-align: center; text-transform:uppercase" validable="required CultureCodeReq, minlength 2 CultureCodeLength, maxlength 2 CultureCodeLength" value="@Model.CultureCode" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelLanguage)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <select id="slcLanguageEdit" class="form-control" data-bind="options: ListLanguage, optionsText: 'Name', optionsValue: 'Id', value:'@Model.LanguageCode'" >
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelCountry)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <select id="slcCountryEdit" class="form-control" data-bind="options: ListCountry, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CountryCode'" >
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelShortDateFormat)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <select id="slcShortDateFormatEdit" class="form-control" data-bind="options: ListShortDateFormat, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CodeShortDateFormat'" >
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelLongDateFormat)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <p></p>
                                        <select id="slcLongDateFormatEdit" class="form-control" data-bind="options: ListLongDateFormat, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CodeLongDateFormat'" >
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelRangeLimitYears)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <input type="text" style="width: 89px" id="spnLowerLimitYearEdit" maxlength="4" value="@Model.LowerLimitYear" class="w-input" validable="required Year, digits true" />&nbsp;-&nbsp;<input type="text" style="width: 89px" id="spnUpperLimitYearEdit" maxlength="4" value="@Model.UpperLimitYear" class="w-input" validable="required ValidateYearRange, min 1999 ValidateSuperiorYear, max 2999 ValidateSuperiorYearMax" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelShortTimeFormat)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <select id="slcShortTimeFormatEdit" class="form-control" data-bind="options: ListShortTimeFormat, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CodeShortTimeFormat'" validable="required ShortTimeFormatReq">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelLongTimeFormat)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <select id="slcLongTimeFormatEdit" class="form-control" data-bind="options: ListLongTimeFormat, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CodeLongTimeFormat'" validable="required LongTimeFormatReq">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelFormatIntegerNumbers)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <p></p>
                                        <select id="slcFormatIntegerNumberEdit" class="form-control" data-bind="options: ListFormatIntegerNumber, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CodeFormatIntegerNumber'" validable="required FormatIntegerNumbersReq">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(IndexResource.LabelFormatDecimalNumbers)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <p></p>
                                        <select id="slcFormatDecimalNumberEdit" class="form-control" data-bind="options: ListFormatDecimalNumber, optionsText: 'Name', optionsValue: 'Id', value:'@Model.CodeFormatDecimalNumber'" validable="required FormatDecimalNumbersReq">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(GeneralResource.LabelRegistrationStatus):</label>
                                    <div class="col-sm-7">
                                        <select id="slcRegistrationStatusEdit" data-bind="options: ListRegistrationStatus, optionsText: 'Name', optionsValue: 'Id', value: '@Model.RegistrationStatus'" class="form-control">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(GeneralResource.LabelModificationReason)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <textarea id="txtModificationReasonEdit" class="w-textarea" maxlength="255" validable="Comment true" placeholder="@Html.Raw(GeneralResource.LabelModificationReason)"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="cnt-button">
        <input id="btnSaveEdit" class="btn btn-primary" type="button" data-bind="visible: Save.Visible, enable: Save.Enabled" value="@GeneralResource.LabelSave"/>
        <input id="btnCancelEdit" class="btn btn-default" type="button" data-bind="visible: Cancel.Visible, enable: Cancel.Enabled" value="@GeneralResource.LabelGetOut" />
    </div>
</div>

<script type="text/javascript">
    ns('Yanbal.SFT.Presentation.Web.Policy.Culture.Models');
    Yanbal.SFT.Presentation.Web.Policy.Culture.Models.Edit = @(Html.Raw(Json.Encode(Model)));
</script>
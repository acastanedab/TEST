@using Yanbal.SFT.Presentation.Web.Source.Resources.Shared
@using Yanbal.SFT.Presentation.Web.Source.Resources.Freight.Combination
@using Yanbal.SFT.Presentation.Web.Source.Models.Freight;
@using Yanbal.SFT.FreightManagement.Common.Messages;
@model CombinationModel

<div class="w-formulario-popup">
    <div class="w-title-2">
        @Html.Raw(IndexResource.LabelTitleNew)
    </div>
    <div id="divRequiredField">
        <span class="fa fa-info-circle"></span>
        <span>@GeneralResource.LabelRequiredField1<span class="danger">*</span>@GeneralResource.LabelRequiredField2</span>
    </div>
    <hr />
    <div class="w-form">
        <div id="divContainerNew" class="w-item">
            <form id="frmCreateParameterCombination">
                <div id="divCreateParameterCombination">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal" role="form">
                                <div class="subtitle">
                                    @Html.Raw(IndexResource.LabelSubTitleDataCombination)
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelAmount)<span class="danger">*</span>:</label>
                                    <div class="col-sm-8">
                                        <input id="txtAmountFreightCreate" type="text" class="form-control" maxlength="9" validable="required FreightAmountReq" placeholder="@Html.Raw(IndexResource.LabelAmount)" mask="decimal" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">@Html.Raw(GeneralResource.LabelRegistrationStatus):</label>
                                    <div class="col-sm-8">
                                        <label class="col-sm-5 control-label-bold">@Html.Raw(Model.LabelRegistrationStatus)</label>
                                    </div>
                                </div>
                                <br />
                                <div class="subtitle">
                                    @Html.Raw(IndexResource.LabelSubTitleParameterCombination)
                                </div>
                                <div id="divParameterCombinationActiveCreate">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelParameter):</label>
                                        <div class="col-sm-8">
                                            <label id="lblParameterNameCreate" class="col-sm-8 control-label-bold"></label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelParameterValue):</label>
                                        <div class="col-sm-6">
                                            <select id="slcParameterValueCreate" class="form-control"></select>
                                        </div>
                                        <div class="col-sm-2" style="text-align: right;">
                                            <input id="btnAddCreate" class="btn btn-default" type="button" data-bind="visible: Add.Visible, enable: Add.Enabled" value="@GeneralResource.LabelAdd"/>
                                        </div>
                                    </div>
                                </div>
                                <div id="divParameterCombinationDisableCreate">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label-bold">@Html.Raw(IndexResource.LabelParameterCombinationDisable)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="divSearchResultParameterCombinationCreate" style="display: none" onscroll="true">
                        <div class="table-responsive u-table-search">
                            <div id="grdResultParameterCombinationCreate" class="table table-bordered table-striped table-hover table-responsive">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="cnt-button">
        <input id="btnSaveCreate" class="btn btn-primary" type="button" data-bind="visible: Save.Visible, enable: Save.Enabled" value="@GeneralResource.LabelSave"/>
        <input id="btnCancelCreate" class="btn btn-default" type="button" data-bind="visible: Cancel.Visible, enable: Cancel.Enabled" value="@GeneralResource.LabelGetOut" />
    </div>
</div>

<script type="text/javascript">
    ns('Yanbal.SFT.Presentation.Web.Freight.Combination.Models');
    Yanbal.SFT.Presentation.Web.Freight.Combination.Models.Create = @(Html.Raw(Json.Encode(Model)));
</script>

@using Yanbal.SFT.Presentation.Web.Source.Resources.Shared
@using Yanbal.SFT.Presentation.Web.Source.Resources.Freight.Combination
@using Yanbal.SFT.Presentation.Web.Source.Models.Freight;
@using Yanbal.SFT.FreightManagement.Common.Messages;
@model CombinationModel

<div class="w-formulario-popup">
    <div class="w-title-2">
        @Html.Raw(IndexResource.LabelTitleEdit)
    </div>
    <div id="divRequiredField">
        <span class="fa fa-info-circle"></span>
        <span>@GeneralResource.LabelRequiredField1<span class="danger">*</span>@GeneralResource.LabelRequiredField2</span>
    </div>
    <hr />
    <div class="w-form">
        <div id="divContainerEdit" class="w-item">
            <form id="frmEditParameterCombination">
                <div id="divEditParameterCombination">
                    <div class="row">                        
                        <div class="col-md-12">
                            <div class="form-horizontal" role="form">
                                <div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelAmount):</label>
                                        <div class="col-sm-8">
                                            <label class="col-sm-8 control-label-bold">@Html.Raw(Model.AmountFreightString)</label>                                            
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelParameter):</label>
                                        <div class="col-sm-8">
                                            <label id="lblParameterNameEdit" class="col-sm-8 control-label-bold"></label>
                                        </div>
                                    </div>
                                </div>
                                <div id="divParameterCombinationActiveEdit">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">@Html.Raw(IndexResource.LabelParameterValue):</label>
                                        <div class="col-sm-6">
                                            <select id="slcParameterValueEdit" class="form-control"></select>
                                        </div>
                                        <div class="col-sm-2" style="text-align: right;">
                                            <input id="btnAddEdit" class="btn btn-default" type="button" data-bind="visible: Add.Visible, enable: Add.Enabled" value="@GeneralResource.LabelAdd"/>
                                        </div>
                                    </div>
                                </div>
                                <div id="divParameterCombinationDisableEdit">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label-bold">@Html.Raw(IndexResource.LabelParameterCombinationDisable)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="divSearchResultParameterCombinationEdit" style="display: none" onscroll="true">
                        <div class="table-responsive u-table-search">
                            <div id="grdResultParameterCombinationEdit" class="table table-bordered table-striped table-hover table-responsive">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">@Html.Raw(GeneralResource.LabelModificationReason)<span class="danger">*</span>:</label>
                                    <div class="col-sm-7">
                                        <textarea id="txtModificationReasonEdit" class="w-textarea" maxlength="255" validable="required ModificationReasonReq" placeholder="@Html.Raw(GeneralResource.LabelModificationReason)"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="cnt-button">        
        <input id="btnSavePCEdit" class="btn btn-primary" type="button" data-bind="visible: Save.Visible, enable: Save.Enabled" value="@GeneralResource.LabelSave"/>
        <input id="btnCancelPCEdit" class="btn btn-default" type="button" data-bind="visible: Cancel.Visible, enable: Cancel.Enabled" value="@GeneralResource.LabelGetOut" />
    </div>
</div>

<script type="text/javascript">
    ns('Yanbal.SFT.Presentation.Web.Freight.Combination.Models');
    Yanbal.SFT.Presentation.Web.Freight.Combination.Models.EditParameterCombination = @(Html.Raw(Json.Encode(Model)));
</script>

